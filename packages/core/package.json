{
    "name": "@freestylejs/ani-core",
    "author": "freestyle",
    "version": "1.2.1",
    "description": "Core functionality for the Ani animation library.",
    "license": "MIT",
    "type": "module",
    "keywords": [
        "animation",
        "core"
    ],
    "sideEffects": false,
    "private": false,
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "dist"
    ],
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        "./*": {
            "import": {
                "types": "./dist/*.d.ts",
                "default": "./dist/*.js"
            },
            "require": {
                "types": "./dist/*.d.cts",
                "default": "./dist/*.cjs"
            }
        },
        ".": {
            "import": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.js"
            },
            "require": {
                "types": "./dist/index.d.cts",
                "default": "./dist/index.cjs"
            }
        }
    },
    "scripts": {
        "build": "tsup",
        "build:fast": "tsup --no-dts",
        "dev": "pnpm build --sourcemap --watch",
        "ts:typecheck": "tsc --noEmit --skipLibCheck"
    }
}
